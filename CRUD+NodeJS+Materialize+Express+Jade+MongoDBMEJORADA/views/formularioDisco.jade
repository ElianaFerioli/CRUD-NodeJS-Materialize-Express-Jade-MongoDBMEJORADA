extends layout
block contenido
  div(class="container")
    h1(class="green-text") Nuevo Disco
    form(action="inserta-disco" method="post")
      div(class="input-field")
        label(for="nombre") Nombre
        input(type="text" name="nombre" placeholer="Nombre" id="nombre" autofocus="true")
      div(class="input-field")
        label(for="apellido") Año
        input(type="number" name="anio" placeholer="Año" id="anio" step="1" min="1920" max="2017")
      div(class="input-field")
        label(for="edad") Url Imagen
        input(type="url" name="imagen" placeholer="Url Imagen" id="imagen")
      div(class="row center")
        div(class="input-field")
          input(type="hidden" name="idArtista"  value="#{idArtista}")
          input(type="submit" value="Insertar" class="btn waves-effect waves-light")